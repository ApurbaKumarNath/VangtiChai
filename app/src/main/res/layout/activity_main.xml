<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_margin"
    tools:context=".MainActivity">

    <!-- 1. HEADER: Taka Display -->
    <TextView
        android:id="@+id/tvTotalAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:padding="@dimen/item_margin"
        android:text="Taka: 0"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. GUIDELINE: Splits screen 35% Left / 65% Right -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <!-- 3. LEFT SIDE: Breakdown List (Split into High and Low to match Kotlin logic) -->

    <!-- High Denominations (500, 100, 50, 20) -->
    <TextView
        android:id="@+id/tvResultHigh"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="top|start"
        android:lineSpacingExtra="34sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_list"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAmount"
        tools:text="500: 0\n100: 0\n50: 0\n20: 0" />

    <!-- Low Denominations (10, 5, 2, 1) -->
    <!-- Placed immediately below High to look like one list -->
    <TextView
        android:id="@+id/tvResultLow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:gravity="top|start"
        android:lineSpacingExtra="34sp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvResultHigh"
        app:layout_constraintVertical_bias="0.0"
        tools:text="10: 0\n5: 0\n2: 0\n1: 0" />

    <!-- 4. RIGHT SIDE: Keypad Buttons -->
    <!-- Buttons set to wrap_content with minHeight to look like blocks -->

    <!-- ROW 1: 1, 2, 3 -->
    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAmount"
        app:layout_constraintVertical_bias="0.40" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/btn1" />

    <!-- ROW 2: 4, 5, 6 -->
    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/btn1" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/btn4" />

    <!-- ROW 3: 7, 8, 9 -->
    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/btn4" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:layout_marginBottom="35dp"
        android:minHeight="@dimen/button_min_height"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/btn7" />

    <!-- ROW 4: 0, CLEAR -->
    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/keypad_spacing"
        android:minHeight="@dimen/button_min_height"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_keypad"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintEnd_toStartOf="@id/btnClear"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/btn7" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:minHeight="@dimen/button_min_height"
        android:text="CLEAR"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_clear"
        app:backgroundTint="@color/button_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn0" />

</androidx.constraintlayout.widget.ConstraintLayout>